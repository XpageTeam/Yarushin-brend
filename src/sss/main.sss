@import "_vars.sss"

@import "../css/plugins.min.css"
@import "../css/styles.css"

@import "_cart.sss"
@import "_ordering.sss"
@import "_lc.sss"

img[height]
	height: auto
	align-self: flex-start

// @media screen and (min-width: 1000px)

.item__image-item
	min-width: auto !important

.main-slide
	video
		width: 100%
		object-fit: cover
		object-position: center
		
.head-catalog__links
	display: none

.main
	.head-catalog__links
		display: block

		.link
			color: #000

.od-deliv
	.bx-sls
		* 
			box-size: border-box !important

		.dropdown-block
			border-radius: 0
			border: 1px solid var(--border-color)
			box-shadow: none
			height: 33px
			padding: 0 35px 0 30px !important

		.bx-ui-sls-fake
			padding: 0 35px 0 0 !important
			width: 97% !important	

.item__image-item
	max-width: 100%
	max-height: 590px


.product-item-container
	display: flex
	flex-direction: column
	flex: 1 1 auto

.card__content
	display: flex
	flex-direction: column
	flex: 1 1 auto
	align-items: center
	justify-content: center

.card__images
	display: flex
	justify-content: center
	align-items: center
// 	size: auto !important



.page
	display: flex
	flex-direction: column
	min-height: 100vh

	&__section
		flex: 1 1 auto


.slick

	&-arrow
		border: none
		padding: 0
		text-indent: -9999px
		overflow: hidden

	&-list, &-track
		min-width: 100%

.mobile-menu
	z-index: 2
	background: #fff

	a[href*=tel]
		padding: 0 20px
		color: #000

.header, .footer
	flex: none

.catalogue


	&__views

		.bx-filter
			// display: none

			&-section
				background: none !important

			&-block
				position: relative

			&-container-modef
				display: none !important
			&-parameters

				&-box
					margin-left: -15px

					&-title span
						position: relative
						padding: 12px 25px 13px 15px
						transition: all .3s
						display: inline-block
						cursor: pointer
						font-family: ProximaNova Bold,sans-serif
						letter-spacing: 1px
						-webkit-font-smoothing: antialiased
						text-transform: uppercase
						font-size: 12px

						&:after
							content: ""
							position: absolute calc(50% - 5px) 9px * *
							size: 4px
							border-right: 1px solid var(--main-color)
							border-bottom: 1px solid var(--main-color)
							transform: rotate(45deg)

						i
							display: none

					&-container
						z-index: 500
						display: none
						position: absolute
						top: 100%
						left: 0
						margin: 0
						min-width: 100%
						max-height: 400px
						overflow-y: auto
						padding: 0
						-webkit-backdrop-filter: blur(10px)
						background-image: linear-gradient(rgba(0,0,0,.05) 0,rgba(0,0,0,.05) 100%),linear-gradient(rgba(255,255,255,.8) 0,rgba(255,255,255,.8) 100%)

						&-block
							display: none

					&.bx-active

						.bx-filter-parameters-box

							&-title span
								background: var(--main-color)
								color: #fff

								&:after
									border-color: currentColor

							&-container
								display: block

		.dropdown.state_active
			min-width: 200px

		.clb
			display: none

		div[class="row"]

			&:not(:last-child)
				margin-right: 25px

			&:last-child
				display: none

				.bx-filter-parameters-box-container
					display: flex
					position: static
					background: none !important

					.btn
						border: none
						font-family: ProximaNova Bold,sans-serif
						letter-spacing: 1px
						-webkit-font-smoothing: antialiased
						color: #fff
						cursor: pointer
						display: flex
						justify-content: center
						align-items: center
						padding: 13px 30px 12px
						text-transform: uppercase
						font-size: 12px
						border: none
						outline: 0
						background: 0 0
						background-repeat: no-repeat

						&:not(:last-child)
							margin-right: 15px

						&-themes, &-link
							background-color: #1951da
							background-image: linear-gradient(to top,#000 100%,transparent 100%)
							background-position: 0 60px
							background-size: 100% 100%
							transition: background-position .3s,opacity 4s ease-in

							&:hover
								background-position: 0 -1px

			&:nth-last-child(2)
				display: flex
				flex-direction: row-reverse

				.col-lg-12

					&:not(:first-child)
						margin-right: 32px


					&:first-child

						.bx-filter-parameters-box-title

		.checkbox
			position: relative
			width: auto

			input[type="checkbox"]
				position: absolute 0 * * 0
				pointer-events: none
				opacity: 0

				&:checked

					+ span

						&:before
							background: url(../images/icons_checked.svg) center center no-repeat #fff
							background-size: 60%
							border-color: #1951da

			.bx-filter-param-text
				cursor: pointer
				display: flex
				height: 100%
				box-sizing: border-box
				align-items: center
				position: relative
				padding: 0 15px 0 39px
				font-family: "ProximaNova Bold",sans-serif
				letter-spacing: 1px
				font-size: 12px
				-webkit-font-smoothing: antialiased
				color: #000
				text-transform: uppercase

				&:before
					content: ''
					position: absolute
					left: 14px
					top: 50%
					transform: translateY(-50%)
					width: 15px
					height: 15px
					border: 1px solid rgba(0,0,0,.15)
					background-color: #fff
					transition: border-color .3s

.bx-ui-slider

	&-track
		display: flex
		justify-content: space-between
		flex-wrap: wrap
		margin: 20px 18px 30px
		position: relative
		background: none !important
		min-width: 200px

		.p1, .p5
			display: block
			width: 50%
			letter-spacing: 1px
			color: #000
			font-family: "ProximaNova Bold",sans-serif
			font-size: 12px
			-webkit-font-smoothing: antialiased
			text-transform: uppercase

			&:after
				content: " руб."

		.p5
			text-align: right

		.p2, .p3, .p4
			display: none

	&-pricebar

		&-vd, &-vn
			display: none

		&-v
			position: absolute
			bottom: -3px
			height: 3px
			background: #1951da !important

	&-range
		width: 100%
		height: 3px
		border: none
		background-color: transparent
		position: relative
		margin: 16px 0 0

		&:before
			content: ''
			position: absolute
			top: 50%
			transform: translateY(-50%)
			left: 0
			width: 100%
			height: 3px
			background-color: rgba(0,0,0,.1)

	&-handle
		cursor: pointer
		margin-top: -7px
		width: 10px
		height: 20px
		border: none
		border-radius: 0
		display: block
		position: absolute
		outline: 0
		background: #1951da !important

.dropdown
	&-wrapper
		position: relative

	&__content
		background: #eee !important

.sizes-table
	position: absolute calc(100% + 10px) * * 0

	&__link
		text-transform: uppercase
		font-family: "ProximaNova Bold",sans-serif
		font-size: 12px
		color: var(--main-color)

@media screen and (max-width: 767px)
	.catalogue__filter
		flex-direction: column
		align-items: flex-start

	.button_1O
		margin-bottom: 60px !important

	.sizes-table
		position: static
		margin: 8px 0 10px

	.catalogue__views 

		&:not(:first-child)
			margin: 15px 0 0

		form
			flex-direction: column
			align-items: flex-start

			> .row

				&:not(:first-child)
					margin: 18px 0 0

	.catalogue__views div[class=row]:first-child
		flex-direction: column-reverse
		align-items: flex-start

	.nav__item_block-logo

		.symbol_logo
			transform: scale(1.5) translateY(3px)

			g + g
				display: none

	#update_ajax
		margin-bottom: 25px

	.wr-bread-crumb
		margin-bottom: 10px

	.dropdown

		&:first-child
			margin-left: 0

		&__content
			background: hsla(0,0%,100%,1) !important
			box-shadow: 0px 0px 2px 0 rgba(#000, .4)

.head-message
	position: fixed
	top: 0
	left: 0
	width: 100%
	padding: 38px 1.4rem
	text-align: center
	z-index: 9999
	color: #fff

	a
		border-bottom: 1px solid currentColor

	&__transition

		&-enter, &-leave

			&-active
				transition: transform .6s ease

		&-enter
			//transform: translate3d(0, 0, 0)

		&-leave-to, &-enter
			transform: translate3d(0, -100%, 0)

	&.error
		background: var(--main-color)
		// border-bottom: 1px solid $border-color

		a
			color: inherit

	&.notify
		background: var(--main-color)
		// border-bottom: 1px solid var(--border-color)

		a
			color: inherit

.footer__phone

	a
		color: inherit

.menu__group
	transition: opacity .3s ease
	transition-delay: .3s

.state_search

	.menu__group
		opacity: 0
		transition-delay: 0s


.figure__item

	canvas
		display: none

.services

	&__item

		&-img
			margin: 0 0 20px

.table-size
	padding: 0 0 0 30px
	position: relative

	&:before
		background: url(data:image/png;base64,) no-repeat
		size: 21px
		position: absolute calc(50% - 11px) * * 0
		content: ''
		filter: hue-rotate(255deg)
	
	a
		text-transform: uppercase
		font-family: "ProximaNova Bold",sans-serif
		font-size: 12px
		color: var(--main-color)

.customers-slider
	margin: 0 0 -15px -15px
	display: flex
	flex-wrap: wrap

	&__slide
		margin: 0 0 15px 15px
		width: calc((100% - 15px * 3) / 3)

		img
			display: block
			width: 100%

	.slick

		&-dots
			display: flex
			justify-content: center
			width: 100%

			li
				display: block

				&:not(:last-child)
					margin-right: 15px

				&.slick-active

					button
						transform: scale(1.3)

			button
				display: block
				text-indent: -9999px
				overflow: hidden
				padding: 0
				border-radius: 50%
				background: #fff
				border: none
				size: 10px
				cursor: pointer
				transition: transform .3s ease

.bestsellers
	
	&__cont

		.slick-prev
			transform: rotateY(180deg) !important

.tovar__bestsellers

	.cat2__one-buy
		align-items: center
		display: flex
		flex-direction: row
		flex-wrap: wrap

		.cat2__one-add-to-cart--subscribe
			margin: 10px 0 0
			padding: 13px 30px 12px 68px!important

@media (min-width: 1360px)

	.services__container
		padding-top: 0 !important

@media (min-width: 660px)

	.item__footer
		position: static
		margin: 30px 0

.new

	&__title
		text-transform: uppercase
		font-size: 16px
		letter-spacing: .01em
		font-weight: 100
		color: #fff

		&-link
			margin-left: auto

			.all
				font-weight: bold
				font-size: 12px
				background: #e5e5e5
				text-transform: uppercase
				color: #000
				padding: 14px 24px
				display: inline-block

		&-cont
			display: flex
			align-items: center
			margin-bottom: 42px

			.slick

				&-arrow
					border: 1px solid var(--border-color)
					size: 47px 45px
					outline: none !important
					cursor: pointer
					background: url("../images/ico-slick-arrow.png") center no-repeat, #fff

				&-prev
					margin-left: auto
					transform: rotate(180deg)
					border-left: none

.instagramm-slider
	background: #000
	width: 100%
	border-bottom: 1px solid rgba(255,255,255, .15)
	padding: 74px 0 66px

div.instagram
	display: flex
