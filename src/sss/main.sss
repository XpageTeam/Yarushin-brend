@import "_vars.sss"

@import "../css/plugins.min.css"
@import "../css/styles.css"

@import "_cart.sss"
@import "_ordering.sss"
@import "_lc.sss"

img[height]
	height: auto
	align-self: flex-start

// @media screen and (min-width: 1000px)
.page
	display: flex
	flex-direction: column
	min-height: 100vh

	&__section
		flex: 1 1 auto

.mobile-menu
	z-index: 2
	background: #fff

	a[href*=tel]
		padding: 0 20px
		color: #000

.header, .footer
	flex: none

.catalogue


	&__views

		.bx-filter
			// display: none

			&-section
				background: none !important

			&-block
				position: relative

			&-container-modef
				display: none !important
			&-parameters

				&-box
					margin-left: -15px

					&-title span
						position: relative
						padding: 12px 25px 13px 15px
						transition: all .3s
						display: inline-block
						cursor: pointer
						font-family: ProximaNova Bold,sans-serif
						letter-spacing: 1px
						-webkit-font-smoothing: antialiased
						text-transform: uppercase
						font-size: 12px

						&:after
							content: ""
							position: absolute calc(50% - 5px) 9px * *
							size: 4px
							border-right: 1px solid var(--main-color)
							border-bottom: 1px solid var(--main-color)
							transform: rotate(45deg)

						i
							display: none

					&-container
						z-index: 500
						display: none
						position: absolute
						top: 100%
						left: 0
						margin: 0
						min-width: 100%
						max-height: 400px
						overflow-y: auto
						padding: 0
						-webkit-backdrop-filter: blur(10px)
						background-image: linear-gradient(rgba(0,0,0,.05) 0,rgba(0,0,0,.05) 100%),linear-gradient(rgba(255,255,255,.8) 0,rgba(255,255,255,.8) 100%)

						&-block
							display: none

					&.bx-active

						.bx-filter-parameters-box

							&-title span
								background: var(--main-color)
								color: #fff

								&:after
									border-color: currentColor

							&-container
								display: block

		.dropdown.state_active
			min-width: 200px

		.clb
			display: none

		div[class="row"]

			&:not(:last-child)
				margin-right: 25px

			&:last-child
				display: none

				.bx-filter-parameters-box-container
					display: flex
					position: static
					background: none !important

					.btn
						border: none
						font-family: ProximaNova Bold,sans-serif
						letter-spacing: 1px
						-webkit-font-smoothing: antialiased
						color: #fff
						cursor: pointer
						display: flex
						justify-content: center
						align-items: center
						padding: 13px 30px 12px
						text-transform: uppercase
						font-size: 12px
						border: none
						outline: 0
						background: 0 0
						background-repeat: no-repeat

						&:not(:last-child)
							margin-right: 15px

						&-themes, &-link
							background-color: #1951da
							background-image: linear-gradient(to top,#000 100%,transparent 100%)
							background-position: 0 60px
							background-size: 100% 100%
							transition: background-position .3s,opacity 4s ease-in

							&:hover
								background-position: 0 -1px

			&:nth-last-child(2)
				display: flex
				flex-direction: row-reverse

				.col-lg-12

					&:not(:first-child)
						margin-right: 32px


					&:first-child

						.bx-filter-parameters-box-title

		.checkbox
			position: relative
			width: auto

			input[type="checkbox"]
				position: absolute 0 * * 0
				pointer-events: none
				opacity: 0

				&:checked

					+ span

						&:before
							background: url(../images/icons_checked.svg) center center no-repeat #fff
							background-size: 60%
							border-color: #1951da

			.bx-filter-param-text
				cursor: pointer
				display: flex
				height: 100%
				box-sizing: border-box
				align-items: center
				position: relative
				padding: 0 15px 0 39px
				font-family: "ProximaNova Bold",sans-serif
				letter-spacing: 1px
				font-size: 12px
				-webkit-font-smoothing: antialiased
				color: #000
				text-transform: uppercase

				&:before
					content: ''
					position: absolute
					left: 14px
					top: 50%
					transform: translateY(-50%)
					width: 15px
					height: 15px
					border: 1px solid rgba(0,0,0,.15)
					background-color: #fff
					transition: border-color .3s

.bx-ui-slider

	&-track
		display: flex
		justify-content: space-between
		flex-wrap: wrap
		margin: 20px 18px 30px
		position: relative
		background: none !important
		min-width: 200px

		.p1, .p5
			display: block
			width: 50%
			letter-spacing: 1px
			color: #000
			font-family: "ProximaNova Bold",sans-serif
			font-size: 12px
			-webkit-font-smoothing: antialiased
			text-transform: uppercase

			&:after
				content: " руб."

		.p5
			text-align: right

		.p2, .p3, .p4
			display: none

	&-pricebar

		&-vd, &-vn
			display: none

		&-v
			position: absolute
			bottom: -3px
			height: 3px
			background: #1951da !important

	&-range
		width: 100%
		height: 3px
		border: none
		background-color: transparent
		position: relative
		margin: 16px 0 0

		&:before
			content: ''
			position: absolute
			top: 50%
			transform: translateY(-50%)
			left: 0
			width: 100%
			height: 3px
			background-color: rgba(0,0,0,.1)

	&-handle
		cursor: pointer
		margin-top: -7px
		width: 10px
		height: 20px
		border: none
		border-radius: 0
		display: block
		position: absolute
		outline: 0
		background: #1951da !important


@media screen and (max-width: 767px)
	.catalogue__filter
		flex-direction: column
		align-items: flex-start

	.button_1O
		margin-bottom: 60px !important

	.catalogue__views 

		&:not(:first-child)
			margin: 15px 0 0

		form
			flex-direction: column
			align-items: flex-start

			> .row

				&:not(:first-child)
					margin: 18px 0 0

	.catalogue__views div[class=row]:first-child
		flex-direction: column-reverse
		align-items: flex-start

	.nav__item_block-logo

		.symbol_logo
			transform: scale(1.5) translateY(3px)

			g + g
				display: none

	#update_ajax
		margin-bottom: 25px

	.wr-bread-crumb
		margin-bottom: 10px

	.dropdown

		&:first-child
			margin-left: 0

		&__content
			background: hsla(0,0%,100%,1) !important
			box-shadow: 0px 0px 2px 0 rgba(#000, .4)

.head-message
	position: fixed
	top: 0
	left: 0
	width: 100%
	padding: 38px 1.4rem
	text-align: center
	z-index: 9999
	color: #fff

	a
		border-bottom: 1px solid currentColor

	&__transition

		&-enter, &-leave

			&-active
				transition: transform .6s ease

		&-enter
			//transform: translate3d(0, 0, 0)

		&-leave-to, &-enter
			transform: translate3d(0, -100%, 0)

	&.error
		background: var(--main-color)
		// border-bottom: 1px solid $border-color

		a
			color: inherit

	&.notify
		background: var(--main-color)
		// border-bottom: 1px solid var(--border-color)

		a
			color: inherit

.footer__phone

	a
		color: inherit

.menu__group
	transition: opacity .3s ease
	transition-delay: .3s

.state_search

	.menu__group
		opacity: 0
		transition-delay: 0s


.figure__item

	canvas
		display: none

.services

	&__item

		&-img
			margin: 0 0 20px

.dropdown-wrapper
	position: relative

.sizes-table
	position: absolute calc(100% + 10px) * * 0

	&__link
		text-transform: uppercase
		font-family: "ProximaNova Bold",sans-serif
		font-size: 12px
		color: var(--main-color)

.table-size
	padding: 0 0 0 30px
	position: relative

	&:before
		background: url(data:image/png;base64,) no-repeat
		size: 21px
		position: absolute calc(50% - 11px) * * 0
		content: ''
		filter: hue-rotate(255deg)
	
	a
		text-transform: uppercase
		font-family: "ProximaNova Bold",sans-serif
		font-size: 12px
		color: var(--main-color)

@media screen and (max-width: 660px) and (min-width: 370px)
	.services

		&__container
			flex-wrap: wrap
			margin: 0 0 -15px -15px

		&__item
			width: calc((100% - 15px * 2) / 2)
			margin: 0 0 15px 15px


@media screen and (max-width: 370px)
	.services

		&__container
			flex-wrap: wrap

		&__item
			width: 100%

			&:not(:last-child)
				margin-bottom: 15px

.forms
	
	&__error

		&-message
			border: 1px solid #d4d4d4
			background: #fff
			color: #000
			padding: 7px 10px
			border-radius: 7px
			position: absolute
			bottom: 45px
			right: -6px
			box-shadow: 0px 0px 21px 0px rgba(0, 0, 0, 0.1)
			transition: opacity .3s ease
			user-select: none
			font-size: 12px

			opacity: 0
			pointer-events: none

			&:after
				content: ""
				background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA8AAAAIBAMAAADU/bjBAAAAGFBMVEX////V1dXV1dXY2Nji4uL9/f3+/v7///88REMWAAAAA3RSTlMAipDLFSdbAAAAM0lEQVQI12NwKweBMgcGlXQQI0WBgQkkVObEwAAWAgowgITAAiAhsABQyBUiwMAgLAAkAJ+wDc+KWF7qAAAAAElFTkSuQmCC)
				position: absolute
				top: calc(100% - 0px)
				right: 19px
				height: 8px
				width: 15px

			&-icon
				display: block
				border-radius: 50%
				position: absolute
				border: 1px solid #ff0024
				height: 19px
				width: 19px
				background: #fff
				bottom: -32px
				right: 16px

				&:before, &:after
					content: ""
					position: absolute
					width: 1px
					background: #ff0024
					left: calc(50% - 1px)

				&:before
					top: 4px
					height: 8px

				&:after
					bottom: 4px
					height: 2px